<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:background="@drawable/answer_border"
            android:gravity="bottom|right"
            android:padding="@dimen/_12sdp"
            android:text=""
            android:textSize="@dimen/_40ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingTop="@dimen/_23sdp"
            android:paddingBottom="@dimen/_23sdp">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:columnCount="4">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/clear"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/clear_border"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

                <ImageButton
                    android:id="@+id/backspace"
                    android:layout_width="@dimen/_114sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/operator_border"
                    android:src="@drawable/baseline_backspace_24"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp"
                    app:layout_columnSpan="2"
                    app:tint="@color/white"
                    android:contentDescription="back"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/divide"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/operator_border"
                    android:onClick="showOnScreen"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n7"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="7"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n8"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="8"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n9"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="9"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/multiply"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/operator_border"
                    android:onClick="showOnScreen"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n4"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="4"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n5"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="5"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n6"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="6"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/operator_border"
                    android:onClick="showOnScreen"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n1"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="1"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n2"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="2"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n3"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="3"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/substract"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/operator_border"
                    android:onClick="showOnScreen"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/n0"
                    android:layout_width="@dimen/_114sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="0"
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp"
                    app:layout_columnSpan="2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dot"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/number_border"
                    android:onClick="showOnScreen"
                    android:text="."
                    android:textColor="@color/numberTextColor"
                    android:textSize="@dimen/_30ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/equal"
                    android:layout_width="@dimen/_52sdp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/equalbtn_border"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30ssp" />

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>